@model ViewModels.HotelViewModel
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>
            Add Hotel
        </title>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.3.0/knockout-min.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <script type="text/javascript" src="~/js/Hotel.js"></script>

    </head>
    <style>
        html {
            height: 100%;
        }

        body {
            height: 100%;
        }

        .global-container {
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f5f5f5;
        }

        form {
            padding-top: 10px;
            font-size: 14px;
            margin-top: 30px;
        }

        .card-title {
            font-weight: 300;
        }

        .btn {
            font-size: 14px;
            margin-top: 20px;
        }

        .login-form {
            width: 330px;
            margin: 20px;
        }

        .sign-up {
            text-align: center;
            padding: 20px 0 0;
        }

        .alert {
            margin-bottom: -30px;
            font-size: 13px;
            margin-top: 20px;
        }
    </style>
    <body>
        <div class="pt-3">
            <div class="global-container">
                <div class="card login-form">
                    <div class="card-body">
                        <h3 class="card-title text-center"> Add Hotel </h3>
                        <div class="card-text">
                            <form id="hotelform">
                                <div class="form-group">
                                    <label for="name"> Enter Hotel Name </label>
                                    <input type="text" class="form-control form-control-sm" id="name" aria-describedby="name" data-bind="value:Name">
                                </div>

                                <div class="form-group">
                                    <label for="address1"> Enter Hotel Address1 </label>
                                    <input type="text" class="form-control form-control-sm" id="address1" aria-describedby="address1" data-bind="value:Address1">
                                </div>
                                <div class="form-group">
                                    <label for="address2"> Enter Hotel Address2 </label>
                                    <input type="text" class="form-control form-control-sm" id="address2" aria-describedby="address2" data-bind="value:Address2">
                                </div>
                                <div class="form-group">
                                    <label for="address3"> Enter Hotel Address3 </label>
                                    <input type="text" class="form-control form-control-sm" id="address3" aria-describedby="address3" data-bind="value:Address3">
                                </div>

                                <div class="form-group">
                                    <label for="pincode"> Enter Pincode</label>
                                    <input type="text" class="form-control form-control-sm" id="pincode" aria-describedby="pincode" data-bind="value:Pincode">
                                </div>

                                <div class="form-group">
                                    <label for="email"> Enter Email</label>
                                    <input type="email" class="form-control form-control-sm" id="email" aria-describedby="email" data-bind="value:Email">
                                </div>

                                <div class="form-group">
                                    <label for="website"> Enter website</label>
                                    <input type="text" class="form-control form-control-sm" id="website" aria-describedby="website" data-bind="value:Website">
                                </div>
                                <div class="form-group">
                                    <label for="website">Select Star</label>
                                    <select data-bind="options: starCollection, optionsCaption: 'Choose star...',
                    optionsValue: function (item) { return item.id; },
                    optionsText: function (item) { return item.description; }, value: StarId,
                    valueUpdate: 'change'" id="Star" name="Star"></select>                                </div>

                                <div>
                                    <label for="Country"> Select Country</label>
                                    <select data-bind="options: countryCollection, optionsCaption: 'Choose country...',
                    optionsValue: function (item) { return item.id; },
                    optionsText: function (item) { return item.name; }, value: CountryId,
                    valueUpdate: 'change'" id="Country" name="Country"></select>
                                    <br />
                                </div>
                                <div>
                                    <label for="state"> Select State</label>
                                    <select data-bind="options: stateCollection, optionsCaption: 'Choose state...',
        optionsValue: function (item) { return item.id; },
        optionsText: function (item) { return item.name; },  value: StateId,
        valueUpdate: 'change'" id="State" name="State"></select>
                                    <br />
                                </div>
                                <div>
                                    <label for="city">Select City</label>
                                    <select data-bind="options: cityCollection, optionsCaption: 'Choose city...',
        optionsValue: function (item) { return item.id; },
        optionsText: function (item) { return item.name; }, value: CityId,
        valueUpdate: 'change'" id="City" name="City"></select>
                                </div>

                                <input type="button" class="btn btn-primary btn-block" data-bind="click:AddHotel" value="Submit" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    </html>




